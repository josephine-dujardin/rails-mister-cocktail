<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1><%= @cocktail.name %></h1>
      <ul>
      <% @cocktail.doses.each do |dose| %>
        <li><%= dose.description %>
        <%= dose.ingredient.name %>
        <%= link_to "Delete dose",
                      dose_path(dose),
                      method: :delete,
                      data: { confirm: "Are you sure?" } %></li>
      <% end %>
      </ul>
      <%= link_to 'back', root_path(@cocktail), class: "btn btn-primary" %>
    </div>
  </div>
</div>

<%= render 'doses/new' %>
